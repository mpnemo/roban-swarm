# Roban Swarm â€” RTKBase environment configuration
# Installed to /etc/roban-swarm/rtkbase.env

# Base GNSS receiver serial port (use /dev/serial/by-id/ if USB-UART)
BASE_GNSS_SERIAL=/dev/serial/by-id/REPLACE_WITH_ACTUAL_DEVICE
BASE_GNSS_BAUD=115200

# NTRIP caster settings
NTRIP_CASTER_PORT=2101
NTRIP_MOUNT=BASE
NTRIP_USER=admin
NTRIP_PASS=REPLACE_WITH_SECURE_PASSWORD

# Survey-in settings (used only on first run or when moved)
SURVEY_IN_DURATION=300
SURVEY_IN_ACCURACY=2.0

# Fixed base coordinates (populated after survey-in completes)
# Format: lat,lon,height (WGS84 ellipsoidal)
# Leave empty to trigger survey-in on startup
BASE_FIXED_COORDS=

# Path to persist fixed coordinates
BASE_COORDS_FILE=/etc/roban-swarm/base_coords.conf
